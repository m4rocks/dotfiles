// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"edit_predictions": {
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null
		},
		"enabled_in_text_threads": false
	},
	"ssh_connections": [
		{
			"host": "romulus",
			"projects": [
				{
					"paths": [
						"~/Developer"
					]
				},
				{
					"paths": [
						"~/Developer/paquet"
					]
				}
			]
		}
	],
	"show_edit_predictions": true,
	"base_keymap": "VSCode",
	"relative_line_numbers": true,
	"features": {
		"edit_prediction_provider": "zed",
		"copilot": true
	},
	"jupyter": {
		"enabled": false
	},
	"agent": {
		"default_profile": "write",
  "always_allow_tool_actions": false,
  "inline_assistant_model": {
			"provider": "openai",
			"model": "gpt-5"
		},
		"default_model": {
			"provider": "openai",
			"model": "gpt-5"
		},
		"enabled": true,
		"dock": "right",
		"button": true
	},
	"context_servers": {
		"mcp-server-context7": {
   "source": "extension",
   "enabled": true,
   "settings": {
    "default_minimum_tokens": "10000"
   }
  }
	},
	"outline_panel": {
		"dock": "left",
		"button": false
	},
	"chat_panel": {
		"dock": "right",
		"button": "never"
	},
	"collaboration_panel": {
		"button": false,
		"dock": "right"
	},
	"vim_mode": true,
	"ui_font_size": 12,
	"buffer_font_size": 12,
	"project_panel": {
		"dock": "left"
	},
	"terminal": {
		"dock": "bottom"
	},
	"format_on_save": "off",
	"hard_tabs": true,
	"tab_size": 4,
	"theme": {
		"mode": "dark",
		"light": "Ayu Light",
		"dark": "Ayu Dark"
	},
	"lsp": {
		"discord_presence": {
			"initialization_options": {
				"git_integration": true
			}
		}
	}
}
