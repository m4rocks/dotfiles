// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"show_inline_completions": true,
	"base_keymap": "VSCode",
	"relative_line_numbers": true,
	"features": {
		"inline_completion_provider": "none",
		"copilot": false
	},
	"jupyter": {
		"enabled": false
	},
	"assistant": {
		"version": "2",
		"enabled": false,
		"button": false
	},
	"outline_panel": {
		"dock": "left",
		"button": false
	},
	"chat_panel": {
		"dock": "left",
		"button": false
	},
	"collaboration_panel": {
		"button": false,
		"dock": "left"
	},
	"vim_mode": true,
	"ui_font_size": 14,
	"buffer_font_size": 14,
	"project_panel": {
		"dock": "left"
	},
	"terminal": {
		"dock": "bottom"
	},
	"format_on_save": "off",
	"hard_tabs": true,
	"tab_size": 4,
	"theme": {
		"mode": "dark",
		"light": "Andromeda",
		"dark": "Ayu Dark"
	}
}
