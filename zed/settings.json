// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"base_keymap": "VSCode",
	"relative_line_numbers": true,
	"features": {
		"inline_completion_provider": "none",
		"copilot": false
	},
	"assistant": {
		"version": "2",
		"button": false,
		"enabled": false
	},
	"outline_panel": {
		"dock": "left",
		"button": false
	},
	"chat_panel": {
		"dock": "left",
		"button": false
	},
	"collaboration_panel": {
		"button": false,
		"dock": "left"
	},
	"vim_mode": true,
	"ui_font_size": 12,
	"buffer_font_size": 12,
	"project_panel": {
		"dock": "left"
	},
	"terminal": {
		"dock": "bottom"
	},
	"format_on_save": "off",
	"hard_tabs": true,
	"theme": {
		"mode": "system",
		"light": "Gruvbox Light",
		"dark": "Gruvbox Dark"
	}
}
